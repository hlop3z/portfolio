---
import { certifications } from '../data/content';
---

<section id="certifications" class="section-container">
  <h2 class="section-title">
    <span class="text-accent font-mono text-lg mr-2">04.</span>
    Certifications
  </h2>

  <div class="grid md:grid-cols-2 gap-6">
    {certifications.map((cert) => (
      <a
        href={cert.url}
        target="_blank"
        rel="noopener noreferrer"
        class="card group flex items-start gap-4"
      >
        <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-accent/10 flex items-center justify-center group-hover:bg-accent/20 transition-colors">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <h3 class="text-text-primary font-semibold group-hover:text-accent transition-colors">
            {cert.name}
          </h3>
          <p class="text-text-secondary text-sm mt-1">{cert.issuer}</p>
          <p class="text-text-secondary/60 text-xs mt-1">{cert.date}</p>
        </div>
        <svg class="w-5 h-5 text-text-secondary group-hover:text-accent transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    ))}
  </div>
</section>
