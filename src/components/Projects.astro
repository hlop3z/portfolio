---
import { getProjectsWithStars } from '../data/content';

// Get projects with cached star counts
const allProjects = getProjectsWithStars();
const featuredProjects = allProjects.filter(p => p.featured);
---

<section id="projects" class="section-container">
  <h2 class="section-title">
    <span class="text-accent font-mono text-lg mr-2">03.</span>
    Featured Projects
  </h2>

  <div class="grid gap-6">
    {featuredProjects.map((project) => (
      <article class="card group">
        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
          <div class="flex-1">
            <!-- Project Header -->
            <div class="flex items-center gap-3 mb-3">
              <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
              </svg>
              <h3 class="text-xl font-semibold text-text-primary group-hover:text-accent transition-colors">
                {project.name}
              </h3>
              {project.stars !== null && project.stars > 0 && (
                <span class="flex items-center gap-1 text-sm text-text-secondary">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                  </svg>
                  {project.stars}
                </span>
              )}
            </div>

            <!-- Description -->
            <p class="text-text-secondary mb-4">
              {project.longDescription || project.description}
            </p>

            <!-- Tech Stack -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tech.map((tech) => (
                <span class="text-xs font-mono text-accent/80 bg-accent/5 px-2 py-1 rounded">
                  {tech}
                </span>
              ))}
            </div>
          </div>

          <!-- Links -->
          <div class="flex items-center gap-4 md:flex-col md:items-end">
            <a
              href={project.github}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 text-text-secondary hover:text-accent transition-colors"
              aria-label={`View ${project.name} on GitHub`}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm">View Code</span>
            </a>
            {project.demo && (
              <a
                href={project.demo}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-text-secondary hover:text-accent transition-colors"
                aria-label={`View ${project.name} demo`}
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                <span class="text-sm">Live Demo</span>
              </a>
            )}
          </div>
        </div>
      </article>
    ))}
  </div>

  <!-- View More Link -->
  <div class="mt-10 text-center">
    <a
      href="https://github.com/hlop3z?tab=repositories"
      target="_blank"
      rel="noopener noreferrer"
      class="btn-secondary"
    >
      View All Projects
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</section>
