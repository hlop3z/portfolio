---
import { skills } from "../data/content";

const skillCategories = [
  { title: "Languages", items: skills.languages, icon: "code" },
  { title: "DevOps", items: skills.devops, icon: "cloud" },
  { title: "Backend", items: skills.backend, icon: "server" },
  { title: "Frontend", items: skills.frontend, icon: "layout" },
  { title: "Databases", items: skills.databases, icon: "database" },
];
---

<section id="skills" class="section-container">
  <div class="bg-bg-secondary/50 border border-white/5 rounded-2xl p-8 md:p-10">
  <h2 class="section-title">
    <span class="text-accent font-mono text-lg mr-2">02.</span>
    Skills & Technologies
  </h2>

  <div class="grid md:grid-cols-2 gap-6">
    {
      skillCategories.map((category) => (
        <div class="card">
          <div class="flex items-center gap-3 mb-4">
            {category.icon === "code" && (
              <svg
                class="w-5 h-5 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                />
              </svg>
            )}
            {category.icon === "layout" && (
              <svg
                class="w-5 h-5 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"
                />
              </svg>
            )}
            {category.icon === "server" && (
              <svg
                class="w-5 h-5 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                />
              </svg>
            )}
            {category.icon === "database" && (
              <svg
                class="w-5 h-5 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"
                />
              </svg>
            )}
            {category.icon === "cloud" && (
              <svg
                class="w-5 h-5 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"
                />
              </svg>
            )}
            <h3 class="text-lg font-semibold text-text-primary">
              {category.title}
            </h3>
          </div>
          <div class="flex flex-wrap gap-2">
            {Array.isArray(category.items) &&
              category.items.map((item) => (
                <span class="tag">
                  {typeof item === "string" ? item : item.name}
                </span>
              ))}
          </div>
        </div>
      ))
    }
  </div>
  </div>
</section>
